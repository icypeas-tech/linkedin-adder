{
	"manifest_version": 2,
	"name": "LinkedIn Adder",
	"version": "1.0",
	"description": "Allows you to automatically accept connection requests on LinkedIn.",
	"icons": {
	  "16": "src/images/add-user3.png"
	},
	"background": {
	  "scripts": ["src/background.js"]
	},
	"permissions": [
	  "identity",
	  "cookies",
	  "activeTab"
	],
  	"browser_action": {
    	"default_popup": "popup.html"
  	},
	"content_scripts": [
	  {
		"matches": ["https://www.linkedin.com/mynetwork/invitation-manager/", "https://www.linkedin.com/mynetwork/"],
		"js": ["src/content.js", "src/elementsMap.js"]
	  }
	]
  }
  


  